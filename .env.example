# Environment (development, staging, production)
ENVIRONMENT=development

# Database - Updated for magicscholar_db
DATABASE_URL=postgresql://username:password@localhost:5432/magicscholar_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Domain Configuration
# For development, leave as localhost
# For production, set to your actual domains
DOMAIN=localhost:3000
API_DOMAIN=localhost:8000

# OAuth Providers
# You'll need separate OAuth apps for development and production
# Development OAuth Apps
GOOGLE_CLIENT_ID=your-google-client-id-dev
GOOGLE_CLIENT_SECRET=your-google-client-secret-dev

LINKEDIN_CLIENT_ID=your-linkedin-client-id-dev
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-dev

TIKTOK_CLIENT_ID=your-tiktok-client-id-dev
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret-dev

# App Settings
APP_NAME=CampusConnect
APP_VERSION=1.0.0
DEBUG=True

# Redis (for sessions/cache)
REDIS_URL=redis://localhost:6379

