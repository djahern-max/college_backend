# ===========================
# TEST ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================
# Copy this file to .env.test and fill in your actual values
# DO NOT commit .env.test to version control

# Testing flag - CRITICAL
TESTING=true

# ===========================
# DATABASE
# ===========================
# Test database (separate from production)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/unified_test

# ===========================
# SECURITY
# ===========================
# Test secret key (different from production)
SECRET_KEY=test-secret-key-for-testing-only-do-not-use-in-production-32chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================
# DIGITAL OCEAN SPACES
# ===========================
# Your DigitalOcean Spaces credentials
DIGITAL_OCEAN_SPACES_ACCESS_KEY=YOUR_ACCESS_KEY_HERE
DIGITAL_OCEAN_SPACES_SECRET_KEY=YOUR_SECRET_KEY_HERE
DIGITAL_OCEAN_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DIGITAL_OCEAN_SPACES_BUCKET=your-bucket-name
DIGITAL_OCEAN_SPACES_REGION=nyc3
IMAGE_CDN_BASE_URL=https://your-bucket-name.nyc3.cdn.digitaloceanspaces.com

# ===========================
# FRONTEND URLS
# ===========================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ===========================
# OAUTH (MOCKED IN TESTS)
# ===========================
# OAuth will be mocked/bypassed in tests
# We'll use direct email/password authentication instead
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

LINKEDIN_CLIENT_ID=test-linkedin-client-id
LINKEDIN_CLIENT_SECRET=test-linkedin-client-secret

# ===========================
# APPLICATION SETTINGS
# ===========================
APP_NAME=MagicScholar
APP_VERSION=1.0.0
ENVIRONMENT=testing

# ===========================
# LOGGING
# ===========================
LOG_LEVEL=DEBUG
